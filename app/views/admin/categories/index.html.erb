<%= render 'base' %>
<h1><%= t("activerecord.models.category") %></h1>
<div id="admin_categories">
  <table class="table table-bordered table-striped table-condensed">
    <tr class="head">
      <td>编号</td>
      <td><%= t("activerecord.attributes.category.name") %></td>
      <td><%= t("activerecord.attributes.category.position") %></td>
      <td>创建时间</td>
      <td class="opts"></td>
    </tr>
    <% @categories.each do |item| %>
    <tr class="<%= cycle("","even") %>">
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.position %></td>
      <td><%= l(item.created_at, :format => :long) %></td>
      <td>
        <%= link_to "编辑", edit_admin_category_path(@category_type, item.id), :class => "icon small_edit" %>
        <%= link_to "删除", show_admin_category_path(@category_type, item.id), :method => :delete, 'data-confirm' => '确定要删除吗?', :class => "icon small_delete" %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
<div class="tools">
  <a href="<%= new_admin_category_path(@category_type) %>" class="btn btn-small btn-success">新建</a>
</div>
