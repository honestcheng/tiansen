<%= simple_form_for [:admin, @company], :url => admin_company_edit_path, :method => :put do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :tel %>
    <%= f.input :fax %>
    <%= f.input :email %>
    <%= f.input :linkman %>
    <%= f.input :zipcode %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
