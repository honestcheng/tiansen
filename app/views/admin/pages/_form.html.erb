
<%= simple_form_for [:admin, @page ] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :permalink %>
    <%= f.input :content, :as => :kindeditor, :label => false, :input_html => {:width => 800, :height => 300, :window_onload => true} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
