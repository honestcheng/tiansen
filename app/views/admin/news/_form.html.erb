
<%= simple_form_for [:admin, @news ] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :sub_title %>
    <%= f.input :published_at , :as => :string , :input_html => { :class => "datepicker"}%>
    <%= f.input :category_id , :collection => @categories, :input_html => {:class => "choosen"} %>
    <%= f.input :position %>
    <%= f.input :content, :as => :kindeditor, :label => false, :input_html => {:width => 800, :height => 300, :window_onload => true} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>