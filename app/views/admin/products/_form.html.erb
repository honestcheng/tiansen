
<%= simple_form_for [:admin, @product ] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category_id , :collection => @categories, :input_html => {:class => "choosen"} %>
    <%= f.input :model %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :pic_path %>
    <%= f.input :position %>
    <%= f.input :content, :as => :kindeditor, :label => false, :input_html => {:width => 800, :height => 300, :window_onload => true} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
